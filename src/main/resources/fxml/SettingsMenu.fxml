<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SettingsView">
    <children>
        <Button layoutX="40.0" layoutY="55.0" mnemonicParsing="false" onAction="#backToMain" prefHeight="26.0" prefWidth="65.0" text="Back">
            <font>
                <Font name="Cambria" size="12.0" />
            </font>
        </Button>
        <ProgressBar fx:id="snakeHealth" layoutX="59.0" layoutY="305.0" prefWidth="200.0" progress="0.0" />
        <Button layoutX="283.0" layoutY="301.0" mnemonicParsing="false" onAction="#increaseHealth" prefHeight="26.0" prefWidth="31.0" text="+">
            <font>
                <Font name="Cambria" size="12.0" />
            </font>
        </Button>
        <Button layoutX="336.0" layoutY="301.0" mnemonicParsing="false" onAction="#decreaseHealth" prefHeight="26.0" prefWidth="31.0" text="-">
            <font>
                <Font name="Cambria" size="12.0" />
            </font>
        </Button>
        <Label fx:id="healthLabel" layoutX="59.0" layoutY="262.0" prefHeight="18.0" prefWidth="137.0" text="Snake Health : ">
            <font>
                <Font name="Cambria" size="12.0" />
            </font>
        </Label>

        <Label id="title" layoutX="415.0" layoutY="37.0" prefHeight="18.0" prefWidth="173.0" text="Settings" />
      <Label fx:id="speedLabel" layoutX="59.0" layoutY="138.0" prefHeight="18.0" prefWidth="137.0" text="Game Speed: ">
         <font>
            <Font name="Cambria" size="12.0" />
         </font>
      </Label>
      <Button layoutX="61.0" layoutY="182.0" mnemonicParsing="false" onAction="#makeSpeedSlow" prefHeight="26.0" prefWidth="66.0" text="SlOW">
         <font>
            <Font name="Cambria" size="12.0" />
         </font>
      </Button>
      <Button layoutX="143.0" layoutY="182.0" mnemonicParsing="false" onAction="#makeSpeedNormal" prefHeight="26.0" prefWidth="66.0" text="NORMAL">
         <font>
            <Font name="Cambria" size="12.0" />
         </font>
      </Button>
      <Button layoutX="226.0" layoutY="182.0" mnemonicParsing="false" onAction="#makeSpeedFast" prefHeight="26.0" prefWidth="66.0" text="FAST">
         <font>
            <Font name="Cambria" size="12.0" />
         </font>
      </Button>
    </children>
    <stylesheets>
        <URL value="@../CSS/SettingsMenu.css" />
    </stylesheets>
</AnchorPane>
